{
  "name": "action-continuous-translation",
  "private": true,
  "version": "0.0.7",
  "description": "This action uses GitHub Models and remark to translate markdown document incrementally in your repository.",
  "dependencies": {
    "@genaiscript/plugin-mdast": "^2.2.6",
    "@genaiscript/runtime": "^2.2.6",
    "@types/mdast": "^4.0.4",
    "es-toolkit": "^1.39.6",
    "genaiscript": "2.2.6",
    "mdast-util-mdx-jsx": "^3.2.0",
    "mdast-util-mdxjs-esm": "^2.0.1"
  },
  "scripts": {
    "upgrade": "npx -y npm-check-updates -u && npm install && npm run fix",
    "lint": "npx --yes prettier --write genaisrc/",
    "fix": "genaiscript scripts fix",
    "typecheck": "genaiscript scripts compile",
    "configure": "genaiscript configure action translator",
    "test": "npm run typecheck",
    "dev": "genaiscript run translator",
    "dev:astro": "genaiscript run translator \"docs/src/content/**/*\" --no-run-trace -x starlightDir=docs starlightBase=action-continuous-translation",
    "start": "genaiscript run translator \"*.md\" \"docs/src/content/**/*\" --github-workspace -x starlightDir=docs starlightBase=action-continuous-translation --no-run-trace --no-output-trace --out-output $GITHUB_STEP_SUMMARY"
  }
}
