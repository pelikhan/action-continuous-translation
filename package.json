{
  "name": "action-genai-translator",
  "private": true,
  "version": "0.0.0",
  "description": "This action uses GitHub Models and remark to translate markdown document incrementally in your repository.",
  "dependencies": {
    "@genaiscript/plugin-mdast": "^2.2.5",
    "@genaiscript/runtime": "^2.2.5",
    "@types/mdast": "^4.0.4",
    "es-toolkit": "^1.39.6",
    "genaiscript": "2.2.5",
    "mdast-util-mdx-jsx": "^3.2.0",
    "mdast-util-mdxjs-esm": "^2.0.1"
  },
  "scripts": {
    "upgrade": "npx -y npm-check-updates -u && npm install && npm run fix",
    "docker:build": "docker build -t pelikhan-action-genai-markdown-translator .",
    "docker:start": "docker run -e GITHUB_TOKEN pelikhan-action-genai-markdown-translator",
    "act:install": "gh extension install https://github.com/nektos/gh-act",
    "act": "gh act",
    "lint": "npx --yes prettier --write genaisrc/",
    "fix": "genaiscript scripts fix",
    "typecheck": "genaiscript scripts compile",
    "configure": "genaiscript configure action translator",
    "test": "echo 'No tests defined.'",
    "dev": "genaiscript run translator",
    "start": "genaiscript run translator --github-workspace --no-run-trace --no-output-trace",
    "release": "sh release.sh"
  }
}